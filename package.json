{
  "name": "auto-ssl",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently -k -n backend,frontend -c blue,green \"yarn workspace auto-ssl-backend dev\" \"yarn workspace frontend dev\"",
    "dev:backend": "yarn workspace auto-ssl-backend dev",
    "dev:frontend": "yarn workspace frontend dev",
    "test": "yarn workspace auto-ssl-backend test",
    "build": "yarn workspace auto-ssl-backend build && yarn workspace frontend build",
    "build:backend": "yarn workspace auto-ssl-backend build",
    "build:frontend": "yarn workspace frontend build"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "packageManager": "yarn@1.22.19+sha1.4ba7fc5c6e704fce2066ecbfb0b0d8976fe62447"
}
